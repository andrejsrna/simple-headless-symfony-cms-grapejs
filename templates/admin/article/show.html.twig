{% extends 'base.html.twig' %}

{% block title %}Article Details{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Article Details</h1>
            <div class="btn-group">
                <a href="{{ path('admin_articles_index') }}" class="btn btn-outline-secondary">Back to List</a>
                <a href="{{ path('admin_articles_edit', {'id': article.id}) }}" class="btn btn-warning">Edit</a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="h4 card-title">{{ article.title }}</h2>
                <p class="text-muted small mb-4">Created on {{ article.createdAt|date('F d, Y H:i') }}</p>
                
                <div class="card-text">
                    {{ article.content|nl2br }}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 