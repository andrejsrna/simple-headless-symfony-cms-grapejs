{% extends 'admin/base.html.twig' %}

{% block title %}Article Details{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Article Details</h1>
        <div class="btn-group">
            <a href="{{ path('admin_articles_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>
                Back to List
            </a>
            <a href="{{ path('admin_articles_edit', {'id': article.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>
                Edit
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h4 card-title">{{ article.title }}</h2>
            <p class="text-muted small mb-4">
                <i class="fas fa-calendar-alt me-1"></i>
                Created on {{ article.createdAt|date('F d, Y H:i') }}
            </p>
            
            {% if article.imageName %}
                <div class="mb-4">
                    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" 
                         alt="{{ article.title }}"
                         class="img-fluid rounded">
                </div>
            {% endif %}

            <div class="card-text">
                {{ article.content|raw }}
            </div>
        </div>
    </div>
{% endblock %} 