{% extends 'admin/base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Edit Article</h1>
        <div class="btn-group">
            <a href="{{ path('admin_articles_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>
                Back to List
            </a>
            <a href="{{ path('admin_articles_show', {'id': article.id}) }}" class="btn btn-outline-info">
                <i class="fas fa-eye me-1"></i>
                View
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                <div class="mb-3">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                {{ include('admin/article/_image_upload.html.twig') }}

                <div class="mb-3">
                    {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i>
                        Update Article
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 