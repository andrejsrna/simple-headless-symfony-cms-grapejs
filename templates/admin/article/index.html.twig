{% extends 'base.html.twig' %}

{% block title %}Articles Administration{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Articles Management</h1>
            <a href="{{ path('admin_articles_new') }}" class="btn btn-primary">
                Create New Article
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">#</th>
                            <th>Title</th>
                            <th class="text-end pe-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                                <td class="ps-3">{{ article.id }}</td>
                                <td>{{ article.title }}</td>
                                <td class="text-end pe-3">
                                    <div class="btn-group">
                                        <a href="{{ path('admin_articles_show', {'id': article.id}) }}" 
                                           class="btn btn-sm btn-outline-info">
                                            View
                                        </a>
                                        <a href="{{ path('admin_articles_edit', {'id': article.id}) }}" 
                                           class="btn btn-sm btn-outline-warning">
                                            Edit
                                        </a>
                                        <form action="{{ path('admin_articles_delete', {'id': article.id}) }}" 
                                              method="post" 
                                              class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this article?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center py-4 text-muted">
                                    No articles found. Create your first article!
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
