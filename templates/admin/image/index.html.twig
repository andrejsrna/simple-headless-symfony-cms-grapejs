{% extends 'admin/base.html.twig' %}

{% block title %}Image Gallery{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Image Gallery</h1>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row g-4">
        {% for image in images %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100">
                    <img src="{{ image.path }}" 
                         class="card-img-top"
                         alt="{{ image.name }}"
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h6 class="card-title text-truncate" title="{{ image.name }}">{{ image.name }}</h6>
                        <p class="card-text small text-muted mb-0">
                            <i class="fas fa-hdd me-1"></i> {{ image.size }}
                        </p>
                        <p class="card-text small text-muted">
                            <i class="fas fa-clock me-1"></i> {{ image.modified|date('M d, Y H:i') }}
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ image.path }}" 
                               class="btn btn-sm btn-outline-primary"
                               target="_blank">
                                <i class="fas fa-external-link-alt me-1"></i>
                                View
                            </a>
                            <form action="{{ path('admin_images_delete', {'filename': image.name}) }}" 
                                  method="post" 
                                  class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to delete this image?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.name) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash me-1"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-images fa-3x mb-3"></i>
                    <p class="h5">No images found</p>
                    <p class="small">Images uploaded through the article editor will appear here.</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %} 